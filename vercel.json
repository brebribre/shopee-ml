{
    "version": 2,
    "builds": [
      {
        "src": "app/package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "web/dist" }
      },
      {
        "src": "api/app.py",
        "use": "@vercel/python"
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "/api/app.py" },
      { "src": "/(.*)", "dest": "/app/$1" }
    ]
  }